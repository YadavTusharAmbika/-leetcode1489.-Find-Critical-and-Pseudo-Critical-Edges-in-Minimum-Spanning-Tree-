//steps 1 push og index also 
// step 2 sort based on weight 
//step 3 find mst 
// step 4 check each edge with kruskal algo 
//by 1 skip 
// nect is by add 

class Solution {
public:
int N;

// union class banana pada hame kyu ki Kruskal ko multi baaar call  karege toh har baar parent change ho jayega issiliye ek alag class 
class UnionFind{
    public:
    vector<int>parent;
    vector<int>rank;

    // mainr constructor likh diya union find ka
    UnionFind(int n){

        parent.resize(n);
        rank.resize(n,0);
        for (int i = 0; i<n; i++){
            parent[i] = i;

        }
    }
    //neeche find ka code hai 
    int find (int x){
        if (x == parent[x])
        return x;
        return parent[x] = find(parent[x]);

    }
    // ab union ka code
    void Union (int x,  int y ){
        int x_parent = find(x);
        int y_parent = find(y);

           if (x_parent == y_parent) 
                    return;

                if(rank[x_parent] > rank[y_parent]) {
                    parent[y_parent] = x_parent;
                } else if(rank[x_parent] < rank[y_parent]) {
                    parent[x_parent] = y_parent;
                } else {
                    parent[x_parent] = y_parent;
                    rank[y_parent]++;
                }
            }
    };
// below is kruskal algo for jissem skip bhi hai, add of edges 
int Kruskal(int N, vector<vector<int>>& edges, int skip_edge, int force_edge) {
    UnionFind uf(N);
    int sum = 0;

    //add edge dekho ab 


    if(force_edge != -1) {
           uf.Union(edges[force_edge][0], edges[force_edge][1]);
sum += edges[force_edge][2];
    }

 for(int i = 0; i < edges.size(); i++) {
        if(i == skip_edge) continue;

        int u = edges[i][0];
        int v = edges[i][1];
        int wt = edges[i][2];

        if(uf.find(u) != uf.find(v)) {
            uf.Union(u, v);
            sum += wt;
            }
            
        }
        
        //Check if all vertices are included in MST
        int root = uf.find(0);
    for(int i = 1; i < N; i++) {
        if(uf.find(i) != root)
            return INT_MAX;
        }
        
        return sum;
    }
    


//kruskal me ham har baar dsu call kar rahe hai like
        //int parent_u = find(u);
        //int parent_v = find(v);
        // int MST_WEIGHT = Kruskal)(edges,-1,-1);
        // if(Kruskal(edges, i,-1)>MST_WEIGHT) har edge ke liye Kruskal call ho rah ahai 


    vector<vector<int>> findCriticalAndPseudoCriticalEdges(int n, vector<vector<int>>& edges) {

for(int i = 0; i < edges.size(); i++)
        edges[i].push_back(i);

    sort(edges.begin(), edges.end(), [](auto &a, auto &b){
        return a[2] < b[2];

    });
       // since for kruskal's algo, we will sort our input by edge weight.
        //But since we need to return the index in the last
        

            //yaha og index append kar diya 
           //hame og index hoga last me issiliye kiya 




        
        //chota hoga to sort  kar diya acccording to wweight in ascending order 
           // 2nd index par weight hai 


   

        //ham ab sort karege edges ko with respect to weight ascending order me 
      

        //weight konse index me hai qs dekho ussme diya  hoga (0) a(u), (1)b(v)
        //,(2)weigfht 
            //Find MST now
        //Find MST weight using union-find
        //O(E*@)
        // ab mst weight nikalege 
        int MST_WEIGHT = Kruskal(n, edges, -1, -1);
//step 3 sare dekho jo wght aaye wo do
        // yaha ham simple mst nikal raha hai yaha na kisi ko skip karna hai nahi kisi ko add karna hai wo stepp 4 me karna hai 

vector<int> critical, pseudo_critical;

    // ab  saare edges ko proecss kar raha hoon ek ek karke

   for(int i = 0; i < edges.size(); i++) {


        // pata karna ko wop critical hai uss edge ko skip karke batao
        // abhi  i= 0  i th edge process kar rahe hai usko skip karke kruskal se puch lo 

       if(Kruskal(n, edges, i, -1) > MST_WEIGHT)
//skipping i th edge 
            // philal krsukal se skip wala puch rahe hai 
        // bina i ke tu mst nikla ke dikha agar wght og mst se bada aaya toh skip nhi kar skate issko rakhna hi rakhna higa 
        critical.push_back(edges[i][3]);

        
      // agar aaisa nhi hua bina uss mst ke  barobar aaaya toh 
     else if(Kruskal(n, edges, -1, i) == MST_WEIGHT)
 // Force add ith edge
    // will do adding which was skiped (-1) to add i wala og mst barobar aay a
 pseudo_critical.push_back(edges[i][3]);


      }

    
       return {critical, pseudo_critical};
    }
};







